<body>
  <center>
    <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="87%" bgcolor="#f6f6ef">
      <tbody>
        <tr>
          <td bgcolor="#ff6600">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
              <tbody>
                <td style="width:18px;height:18px;padding-right:4px;">
                  <a href="/">
                    <img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px white solid;">
                  </a>
                </td>
                <td>
                  <span class="pagetop">
                    <b>Add comment</b> 
                  </span>
                </td>
              </tbody>
            </table>
          </td>
        </tr>
      <tr style="height:10px"></tr>
      <tr>
        <td>
          <div class="comment_list" style="font-size:12px">
            <div style="padding-top:10px"> 
                
                <font color="828282">
                  â–²
                  <%= @comment.user.first_name %></font> <br>
                  
            </div>
            
            <div style="padding-left:15px; padding-top:5px"> 
                <font color="000000"><%= @comment.comment %></font> <br>
            </div>
          </div>
        </td>
      </tr>
      <tr height="20px"></tr>
      <tr>
        <td>
          <div class="comment-section" style="padding-left:15px;">
            <%= form_tag create_commentb_path(@comment), method: "post" do %>
              <%= hidden_field_tag "id", @comment.id %>
                <div><%= text_area_tag :comment %></div>
                <div style="padding-top:15px;"><%= submit_tag "reply" %></div>
              <% end %>
          </div>
        </td>
      </tr>
      <tr style="height:10px"></tr>
    </tbody>
  </table>
</center>
</body>