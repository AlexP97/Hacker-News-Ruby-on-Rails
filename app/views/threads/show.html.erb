<p id="notice"><%= notice %></p>

<center>
  <table id="hnmain" border="0" cellpadding="0" cellspacing = "0" width="87%" bgcolor="#f6f6ef">
    <tbody>
      <tr>
        <td bgcolor=#ff6600>
          <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px;">
            <tbody>
              <tr>
                <td style="width:18px;padding-right:4px;">
                  <a href="/">
                    <img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px white solid;">
                  </a>
                </td>
                <td style="line-height:12pt; height:10px;">
                  <span class="pagetop">
                    <b class="hnname">
                      <a style="text-decoration:none;" href="/">Hacker News </a>
                    </b>
                    <a style="text-decoration:none; padding-left:5px;" href="/new/show">new</a>
                    |
                    <a style="text-decoration:none;" href="/threads/show">threads</a>
                    |
                    <a>comments</a>
                    |
                    <a>show</a>
                    |
                    <a style="text-decoration:none;" href="/ask/show">ask</a>
                    |
                    <a>jobs</a>
                    |
                    <% if user_signed_in? %>
                      <a style="text-decoration:none;" href="/microposts/new">submit</a>         
                    <% else %>
                      <a style="text-decoration:none;" href="/auth/google_oauth2">submit</a> 
                    <% end %>
                  </span>
                </td>
                <td style="text-align:right;padding-right:4px;">
                  <span class="pagetop">
                     <% if user_signed_in? %>
                        <a style="text-decoration:none;" href="/me"><%=current_user.first_name%></a>
                        |
                        <a style="text-decoration:none;" href="/logout"> Logout </a>
                      <% else %>
                        <a style="text-decoration:none;" href="/auth/google_oauth2">Sign in with Google</a>
                      <% end %>     
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
      <tr style="height:10px"></tr>
      <tr>
        <td>
          <table border="0" cellpadding="0" cellspacing="0" class="itemlist">
            <tbody>
              <% @comments.reverse_each do |comment| %>
                 <tr>
                  <td class="subtext" style="font-size:11px;">
                    <font color="ff6600">* </font>
                    <font color=828282>by </font> 
                    <font color=3c963c><a style="text-decoration:none" href="/me"><%= comment.user.first_name %></a></font>
                    <span class="age">
                      <font color=828282><%= time_ago_in_words(comment.created_at) %></font>
                    </span>
                    <font color=828282>|</font>
                    <font color=828282>parent [-]</font>
                  </td>
                </tr>
                <tr>
                    <td style="font-size:12px; padding-left:16px">
                        <font color=000000><%= comment.comment %>
                    </td>
                </tr>
              <% end %>
            </tbody> 
          </table>
        </td>
      </tr>
    </tbody>
  </table>
</center>

<br>


