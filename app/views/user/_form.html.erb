<%= form_with(model: user, local: true) do |form| %>
  <div class="field">
    <table border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td style="width:80px"><%= form.label :first_name %></td>
        <td><%= form.text_field :first_name, id: :user_first_name %></td>
      </tr>
      <tr>
        <td><%= form.label :last_name %></td>
        <td><%= form.text_field :last_name, id: :user_last_name %></td>
      </tr>
      <tr>
        <td><%= form.label :email %></td>
        <td><%= form.text_area :email, id: :user_email %></td>
      </tr>
      <tr>
        <td style="width:28px;"></td>
        <td><%= form.submit %></td><td></td>
      </tr>
    </table>
  </div>
<% end %>
